import pandas as pd
import os
import glob


def create_data(genre):
    path = '/Users/christiankeaunui/PycharmProjects/DataChallenge3/DC3/' + genre
    data = pd.DataFrame()

    for file in glob.glob(os.path.join(path, '*.txt')):
        with open(file, 'r') as f:
            data.append(pd.DataFrame(f.read().split("\n")))

    print(data)
    return data


create_data("Jazz")

